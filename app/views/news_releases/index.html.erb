<nav class="side-navigation">
  <h2 class="roboto">News</h2>
  <p class="recent-news-title">
    Recent News
  </p>
  <%= recent_news %>
</nav>


<div class="main-content">
<% @news.each do |news| %>
  <div class="news-block">
  <h3><%= news.created_at %></h3>
  <h2><%= link_to news.title, news %></h2>
  <%= news.tease %>
  <%= link_to "Read More", news, class: "more" %>
  </div>

<% end %>
</div>
