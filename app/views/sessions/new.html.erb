<div class="login-box">
<%= form_tag(session_path) do %>
  <div class="form-row">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, autofocus: true, size: 40 %>
  </div>
  <div class="form-row">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, size: 40 %>
  </div>
  <div class="form-row">
    <%= submit_tag 'Log In', class: "green-link" %>
  </div>
<% end %>
</div>
