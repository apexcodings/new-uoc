<%= form_for @review do |f| %>

<%= render "shared/errors", object: @review %>

  <div class="form-row group">
    <div class="half-row">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %>
    </div>
    <div class="half-row with-gutter">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>
      <%= f.text_field :address, class: "form_address"  %>
    </div>
  </div>

  <div class="form-row group">
    <div class="half-row">
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email %>
    </div>
    <div class="half-row with-gutter">
      <%= f.label :phone, "Phone Number" %>
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="form-row group">
    <%= f.label :message, "Share your story" %>
    <%= f.text_area :message %>
  </div>

  <div class="form-row group">
    <%= f.submit "Submit", class: "green-link" %>
  </div>
<% end %>
