<nav class="side-navigation <%= "two-line" if @page.in_patient_resources? %>">
  <% if @page.in_portal? %>
    <h2 class="roboto">Patient Portal</h2>
  <% else %>
    <h2 class="roboto"><%= link_to @page.root.label, @page.root %></h2>
  <% end %>
  <%= side_links_for @page %>
</nav>

<div class="main-content">
    <%= heading_for(@page) %>
  <div class="page-container">
    <%= @page.body.html_safe unless @page.body.nil? %>
    <%= page_partial(@page) %>
  </div>
</div>
