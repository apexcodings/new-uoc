<%= form_for @job do |f| %>
<%= render "shared/errors", object: @job %>

  <div class="edit-form-row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="edit-form-row">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="edit-form-row">
    <%= f.submit %>
  </div>

<% end %>
