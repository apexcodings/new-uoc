<% @slides = Slide.by_position %>

<div class="feature">
  <div class="cycle-slideshow"
        data-cycle-fx="fadeout"
        data-cycle-pause-on-hover="true"
        data-cycle-speed="500"
        data-cycle-timeout="6000"
        data-cycle-slides="> div"
        data-cycle-pager-template="<a href='#'></a>"
        >

    <span class="cycle-pager"></span>

    <% @slides.each do |slide| %>

      <div class="slide">
        <div class="slide-image">
          <%= image_tag slide.photo.url(:large) %> 
          <%#= image_tag  https_url_for(slide) %>
        </div>
        <div class="slide-copy">
          <h2><%= truncate(slide.title, length: 45, separator: ' ') %></h2>
          <p>
            <%= truncate(slide.description, length: 230, separator: ' ') %>
          </p>
          <%= link_to(truncate(slide.link_title, length: 40, separator: ' '),
                      slide.link_url,
                      class: "green-link in-slide") %>
        </div>
      </div>

    <% end %>

  </div>
</div>
