<nav class="mobile-navigation"> 
  <div class="group">
    <%= link_to "Site Menu", "#", id: "mobile-trigger" %>

    <%= link_to "Patient Portal", 
      "https://www.nextmd.com/Login/Login.aspx", 
      id: "mobile-portal", 
      target: "_blank" %>
  </div>

    <ul id="mobile-nav">
      <li>
        <%= link_to "Specialties", "", class: "show-navlist" %>
          <%= render "layouts/sublist", slug: "specialties" %>
      </li>
      <li>
        <%= link_to "Services", "#", class: "show-navlist" %>
          <%= render "layouts/sublist", slug: "services" %>
      </li>
      <li>
      <%= link_to "Our Experts", "#", class: "show-navlist" %>
          <%= render "layouts/experts_sublist" %>
      </li>
      <li>
      <%= link_to "Patient Resources", "#", class: "show-navlist" %>
          <%= render "layouts/sublist", slug: "patient-resources" %>
      </li>
      <li>
      <%= link_to "Contact Us", "#", class: "show-navlist" %>
          <%= render "layouts/sublist", slug: "contact-us" %>
      </li>
    </ul>

</nav>



<script>
$(function() {
  $("#mobile-trigger").click(function() {
    $("#mobile-nav").slideToggle();
    //$(this).toggleClass('info-open');
    return false;
  });

  $(".show-navlist").click(function() {
    // open the sublists
    $(this).next('ul').slideToggle();

    // close already opened ones
    $(this).parent().siblings().children().next("ul").slideUp();
    return false;
  });

});
</script>
